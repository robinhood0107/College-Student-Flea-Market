<!DOCTYPE html>
<html class="light" lang="ko">
<head>
  <%- include('../partials/head') %>
  <title>관리자 대시보드 | Campus flea Market</title>
</head>
<body class="font-display bg-main text-slate-800 dark:text-slate-200">
  <div class="relative flex h-auto min-h-screen w-full flex-col group/design-root overflow-x-hidden">
    <div class="layout-container flex h-full grow flex-col">
      <%- include('../partials/header') %>
      
      <!-- 메인 콘텐츠 -->
      <main class="flex-1 px-4 sm:px-6 lg:px-10 py-8">
        <div class="max-w-7xl mx-auto flex flex-col gap-8">
          <!-- 페이지 제목 -->
          <div class="page-header">
            <p class="page-title min-w-72">관리자 대시보드</p>
          </div>
          <!-- 통계 카드 -->
          <div class="stats-grid">
            <div class="stat-card">
              <p class="stat-label">총 회원 수</p>
              <p class="stat-value"><%= typeof stats !== 'undefined' ? stats.totalUsers.toLocaleString() : '0' %></p>
            </div>
            <div class="stat-card">
              <p class="stat-label">총 상품 수</p>
              <p class="stat-value"><%= typeof stats !== 'undefined' ? stats.totalProducts.toLocaleString() : '0' %></p>
            </div>
            <div class="stat-card">
              <p class="stat-label">오늘의 신규 가입자</p>
              <p class="stat-value"><%= typeof stats !== 'undefined' ? stats.todayUsers.toLocaleString() : '0' %></p>
            </div>
            <div class="stat-card">
              <p class="stat-label">오늘의 신규 상품</p>
              <p class="stat-value"><%= typeof stats !== 'undefined' ? stats.todayProducts.toLocaleString() : '0' %></p>
            </div>
          </div>
          <!-- 관리 섹션 -->
          <div class="flex flex-col gap-8">
            <!-- 회원 관리 -->
            <div class="admin-subsection">
              <h2 class="admin-section-title">회원 관리</h2>
              <div class="admin-table-wrapper">
                <div class="overflow-x-auto">
                  <table class="admin-table">
                    <thead>
                      <tr class="admin-table-header">
                        <th class="admin-table-header-cell">ID</th>
                        <th class="admin-table-header-cell">이메일</th>
                        <th class="admin-table-header-cell">닉네임</th>
                        <th class="admin-table-header-cell">가입일</th>
                        <th class="admin-table-header-cell text-right">관리</th>
                      </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-200 dark:divide-slate-800">
                      <% if (typeof users !== 'undefined' && users.length > 0) { %>
                        <% users.forEach(user => { %>
                        <tr>
                          <td class="admin-table-cell"><%= user.id %></td>
                          <td class="admin-table-cell"><%= user.email %></td>
                          <td class="admin-table-cell"><%= user.nickname %></td>
                          <td class="admin-table-cell"><%= user.created_at ? new Date(user.created_at).toLocaleDateString('ko-KR') : '-' %></td>
                          <td class="admin-table-cell text-right">
                            <form action="/admin/user/<%= user.id %>/delete" method="POST" style="display: inline;">
                              <button type="submit" class="admin-action-btn">강제 탈퇴</button>
                            </form>
                          </td>
                        </tr>
                        <% }); %>
                      <% } else { %>
                        <tr>
                          <td colspan="5" class="admin-table-cell text-center">등록된 회원이 없습니다.</td>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            <!-- 상품 관리 -->
            <div class="admin-subsection">
              <h2 class="admin-section-title">상품 관리</h2>
              <div class="admin-table-wrapper">
                <div class="overflow-x-auto">
                  <table class="admin-table">
                    <thead>
                      <tr class="admin-table-header">
                        <th class="admin-table-header-cell">상품명</th>
                        <th class="admin-table-header-cell">판매자</th>
                        <th class="admin-table-header-cell">가격</th>
                        <th class="admin-table-header-cell">등록일</th>
                        <th class="admin-table-header-cell text-right">관리</th>
                      </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-200 dark:divide-slate-800">
                      <% if (typeof adminProducts !== 'undefined' && adminProducts.length > 0) { %>
                        <% adminProducts.forEach(product => { %>
                        <tr>
                          <td class="admin-table-cell"><%= product.title %></td>
                          <td class="admin-table-cell"><%= product.seller_nickname || '알 수 없음' %></td>
                          <td class="admin-table-cell">₩<%= product.price.toLocaleString() %></td>
                          <td class="admin-table-cell"><%= product.created_at ? new Date(product.created_at).toLocaleDateString('ko-KR') : '-' %></td>
                          <td class="admin-table-cell text-right">
                            <form action="/admin/product/<%= product.id %>/delete" method="POST" style="display: inline;">
                              <button type="submit" class="admin-action-btn">삭제</button>
                            </form>
                          </td>
                        </tr>
                        <% }); %>
                      <% } else { %>
                        <tr>
                          <td colspan="5" class="admin-table-cell text-center">등록된 상품이 없습니다.</td>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
      
      <%- include('../partials/footer') %>
    </div>
  </div>
</body>
</html>

